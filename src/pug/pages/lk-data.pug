extends ../layout/main

block variables
	- var title = 'Личные данные';
	- var h1 = 'Личные данные';


block breadcrumb
	-
		var breadcrumbs=[
			{href:'/',name:'Главная'},
			{href:'#',name:'Личный кабинет'},
			{href:'#',name:'Личные данные'},
		];

	+breadcrumbs(breadcrumbs)

block content
		section.lk-page
			.container
				.row
					.col-md-4.col-lg-3
						ul.lk-menu
							-
								var list=[
									{text:'Мой кабинет', status:'active'},
									{text:'Отложенные товары'},
									{text:'Личные данные'},
									{text:'История заказов'},
									{text:'Выйти'},
								]

							each item in list
								li.lk-menu__item(class=item.status?'active':'')
									a(href="#").lk-menu__link= item.text
					
					.col-md-8.col-lg-9
						form
							.lk-form
								.lk-form__list
									.lk-form__item
										.lk-form__label Имя:
										.lk-form__field
											input(type="text", value="Елена")

									.lk-form__item
										.lk-form__label E-mail:
										.lk-form__field
											input(type="email", value="elena95@mail.ru")

									.lk-form__item
										.lk-form__label Телефон:
										.lk-form__field
											input.js-phone(type="text", value="8 (800) 505-09-84")

									.lk-form__item
										.tooltip Является логином для входа на сайт
										
								.lk-form__sect
									.lk-form__title Адрес (для доставки):
									
									.lk-form__content
										.lk-form__list
											.lk-form__item
												.lk-form__label Город:
												.lk-form__field
													input(type="text", value="Санкт-Петербург")

											.lk-form__item.order-2.order-md-0
												.lk-form__label Номер дома:
												.lk-form__field
													input(type="number", value="12")

											.lk-form__item
												.lk-form__label Улица:
												.lk-form__field
													input.js-phone(type="text", value="ул. Дедова")

											.lk-form__item.order-2.order-md-0
												.lk-form__label Квартира:
												.lk-form__field
													input(type="number", value="137")
								
								.lk-form__btn
									a.btn.btn_border(href='#') Сохранить изменения