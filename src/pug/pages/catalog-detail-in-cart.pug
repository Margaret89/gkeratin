extends ../layout/main

block variables
	- var title = 'Каталог детальная';

block breadcrumb
	-
		var breadcrumbs=[
			{href:'/',name:'Главная'},
			{href:'#',name:'Каталог'},
			{href:'#',name:'Домашний уход'},
			{href:'#',name:'Сыворотки'},
			{href:'#',name:'Dry Oil Shine Spray GKhair (Сухое масло - спрей для блеска) 115 мл.'},
		];

	+breadcrumbs(breadcrumbs)

block content
	section.catalog-detail
		.container
			.cat-detail-top
				.row
					.col-lg-6
						.product-slider-wrap
							.sticker
								.sticker__item
									.sticker__bg
										+svg('bg-sticker','bg-sticker', '50', '50')
									.sticker__text хит

								.sticker__item
									.sticker__bg.sticker__bg_pink
										+svg('bg-sticker','bg-sticker', '50', '50')
									.sticker__icon
										+svg('ic-like','ic-like', '20', '20')

							.product-thumb-slider.js-product-thumb-slider
								-
									var list=[
										{img:'product-slide-thumb1.jpg'},
										{img:'product-slide-thumb2.jpg'},
										{img:'product-slide-thumb3.jpg'},
										{img:'product-slide-thumb4.jpg'},
										{img:'product-slide-thumb5.jpg'},
										{img:'product-slide-thumb6.jpg'},
										{img:'product-slide-thumb7.jpg'},
									]
								each item in list
									.product-thumb-slider__item
										.product-thumb-slider__img
											img(src="assets/img/"+item.img, alt="")

								.product-thumb-slider__item
									.product-thumb-slider__video
										+svg('ic-youtube','ic-youtube', '52', '36')

							.product-slider.js-product-slider
								-
									var list=[
										{img:'product-slide1.png'},
										{img:'product-slide2.png'},
										{img:'product-slide3.png'},
										{img:'product-slide4.png'},
										{img:'product-slide5.png'},
										{img:'product-slide6.png'},
										{img:'product-slide7.png'},
									]
								each item in list
									.product-slider__item
										a.product-slider__link(href="assets/img/"+item.img, data-fancybox='images')
											img(src="assets/img/"+item.img, alt="")
					
								.product-slider__item
									.product-slider__video
										iframe.js-product-slider-video(src='https://www.youtube.com/embed/dl16e_mG6hg?enablejsapi=1' title='YouTube video player' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='' frameborder='0')
					
					.col-lg-6
						.cat-detail-info
							.cat-detail-info__top
								.cat-detail-info__status.d-none.d-md-inline-flex
									+svg('ic-tick','ic-tick', '10', '8')
									|Достаточно

								.rating
									.rating__content(style="width: 60%")

							.cat-detail-info__title
								h1 Dry Oil Shine Spray GKhair 115 мл.

							.cat-detail-info__text Сухое масло - спрей для блеска

							.cat-detail-info__status.d-md-none
									+svg('ic-tick','ic-tick', '10', '8')
									|Достаточно

							.cat-detail-info__price-wrap
								.counter
									.counter__arr
										+svg('ic-arrow-down','ic-arrow-down', '14', '8')
									.counter__field
										input(type="text", value="1")
									.counter__arr
										+svg('ic-arrow-up','ic-arrow-up', '14', '8')

								.cat-detail-info__price
									span.cat-detail-info__old-price 1 790 ₽
									span.cat-detail-info__cur-price 1 380 ₽

							.cat-detail-info__btn
								a.btn.btn_border.btn_small.done(href='#') Перейти в корзину
								a.btn.btn_border.btn_small.btn_grey(href='#') Купить в 1 клик
								a(href="#").cat-detail-info__wish
									+svg('ic-heart','ic-heart', '20', '20')


							.cat-advant
								-
									var list=[
										{icon:'ic-delivery', icon_width:'26', icon_height:'18', text_2:'Бесплатная доставка', text_3:'по России от 3990 руб.'},
										{icon:'ic-price-tag', icon_width:'26', icon_height:'26', text_2:'Скидка 5%', text_3:'при оплате картой на сайте'},
										{icon:'ic-garantee', icon_width:'20', icon_height:'25', text_2:'Гарантия'},
										{icon:'ic-present-stroke', icon_width:'26', icon_height:'26', text_1:'Две миниатюры ', text_2:'в подарок', text_3:'с любой покупкой'},
									]
								each item in list
									.cat-advant__item
										.cat-advant__icon
											+svg(item.icon, item.icon, item.icon_width, item.icon_height)
										
										.cat-advant__text
											if(item.text_1)
												=item.text_1
												| 
											
											if(item.text_2)
												b= item.text_2
												| 

											if(item.text_3)
												=item.text_3
											
							.cat-detail-info__note * Минимальная сумма заказа <b>1000</b> руб.
			
			.cat-detail-data
				.row
					.offset-lg-2.col-lg-8
						.unwrap-block.js-unwrap-block
							.unwrap-block__head.js-unwrap-head
								.unwrap-block__title Описание
								.unwrap-block__btn
									+svg('ic-arrow-down','ic-arrow-down', '20', '10')

							.unwrap-block__content.js-unwrap-content
								p Масло-спрей для волос, создает эффект гладкости и глянцевого блеска.

								ul
									li Невесомая сухая защита на масляной основе.
									li Комплекс масел (подсолнечника, оливы, авокадо, жожоба, пассифлоры) придают невероятный блеск и мягкость волосам, а экстракт бамбука и кератин Juvexin укрепляют структуру.
						
						.unwrap-block.js-unwrap-block
							.unwrap-block__head.js-unwrap-head
								.unwrap-block__title Применение
								.unwrap-block__btn
									+svg('ic-arrow-down','ic-arrow-down', '20', '10')

							.unwrap-block__content.js-unwrap-content
								.video
									.video__content
										iframe(src='https://www.youtube.com/embed/dl16e_mG6hg?enablejsapi=1' title='YouTube video player' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='' frameborder='0')
						
						.unwrap-block.js-unwrap-block
							.unwrap-block__head.js-unwrap-head
								.unwrap-block__title Отзывы о товаре
								.unwrap-block__btn
									+svg('ic-arrow-down','ic-arrow-down', '20', '10')

							.unwrap-block__content.js-unwrap-content
								.review
									.review__list
										-
											var list=[
												{img:'ava1.jpg', name:'Инна', date:'26 ноября 2021', rating:'80', text:'Я сама себе делала кератирование этим препаратом и у меня все отлично получилось без всяких парикмахерских. Посмотрела видео в ютубе как наносить и т.д. У меня волнистый пористый до пояса волос. После процедуры ровный и блестящий! Я очень довольна результатом)'},
												{img:'ava2.jpg', name:'Юлия', date:'6 мая 2021', rating:'60', text:'У меня тонкий волос от природы, а с помощью этого средства каждая волосинка как будто стала объемнее. Уже после первого применения волосы заметно восстановились и идеально ровные и блестящие.'},
												{img:'empty', name:'Светлана', date:'17 апреля 2020', rating:'40', text:'Каждый уважающий себя стилист должен иметь данное средство. Качество превосходит ожидания. А если ещё и пофантазировать...'},
											]
										each item in list
											.review__item
												.review__data
													.review__img(style=item.img!='empty'?'background-image: url(assets/img/'+item.img+')':'')
														if(item.img == 'empty')
															+svg('ic-person','ic-person', '20', '24')
													
													.review__info
														.review__name= item.name
														.review__date= item.date

														.rating
															.rating__content(style="width: "+item.rating+"%")

												.review__text= item.text

									.review__form
										form.form-site
											.form-site__info
												.form-site__title Оставить отзыв

											.form-site__content
												.form-site__fields
													.form-site__item.form-site__item_half.order-1
														input(type="text", placeholder="Ваше имя")

													.form-site__item.form-site__item_half.order-3.order-md-2
														.form-rating
															.form-rating__title Рейтинг:

															.rating-area
																-
																	var list=['5','4','3','2','1'];
																
																each item, index in list
																	if(index == 4)
																		input(type='radio' name='rating' value=item, id='star-'+item, required='required')
																	else
																		input(type='radio' name='rating' value=item, id='star-'+item)
																	label.rating-area__item(for='star-'+item title=item)
																		+svg('ic-star','ic-star', '16', '16')

													.form-site__item.order-2.order-md-3
														textarea(placeholder="Комментарий")

												.form-site__polit
													.input-check
														input#polit(type='checkbox', checked="checked")
														label.input-check__label(for='polit')
															span.input-check__mark
																+svg('ic-tick','ic-tick', '10', '8')
															span.input-check__text Я согласен на обработку 
																a(href="#") персональных данных

												.form-site__btn
													button.btn.btn_border Отправить


						.unwrap-block.js-unwrap-block
							.unwrap-block__head.js-unwrap-head
								.unwrap-block__title Ингридиенты
								.unwrap-block__btn
									+svg('ic-arrow-down','ic-arrow-down', '20', '10')

							.unwrap-block__content.js-unwrap-content Ингридиенты

